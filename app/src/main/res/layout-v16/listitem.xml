<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:background="@drawable/customborder"
    android:padding="0dp">

    <TextView
        android:id="@+id/image_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="23dp"
        android:layout_toStartOf="@+id/cardViewAnswe"
        android:layout_toLeftOf="@+id/cardViewAnswe"
        android:fontFamily="Arial Narrow"
        android:paddingTop="3dp"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="normal"
        android:visibility="visible" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewAnswe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="95dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#BCFC9E5B"
        android:elevation="10dp"
        android:visibility="gone"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/cardViewAnswe"
            android:layout_alignBottom="@+id/cardViewAnswe"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="false"
            android:contentDescription="@string/todo"
            android:scaleType="fitCenter"
            android:visibility="gone"
            tools:srcCompat="@tools:sample/avatars[0]" />

    </android.support.v7.widget.CardView>

</RelativeLayout>